{
	"name": "kanjilab",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "eslint .",
		"tauri": "tauri",
		"db:clean": "shx rm -f kanji_lab_loader/data/words.db",
		"db:setup": "cd src-tauri && sqlx database setup",
		"db:load": "cd kanji_lab_loader && uv run loadData.py",
		"db:copy-debug": "shx test -f kanji_lab_loader/data/words.db && shx cp kanji_lab_loader/data/words.db src-tauri/target/debug/words.db || echo File not exist",
		"db": "npm-run-all db:clean db:setup db:load db:copy-debug"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^3.3.1",
		"@sveltejs/adapter-static": "^3.0.6",
		"@sveltejs/kit": "^2.7.3",
		"@sveltejs/vite-plugin-svelte": "^4.0.0",
		"@tauri-apps/cli": "^2.0.4",
		"@types/blockies": "^0.0.4",
		"@types/d3": "^7.4.3",
		"@types/eslint": "^9.6.1",
		"@types/uuid": "^10.0.0",
		"@typescript-eslint/eslint-plugin": "^8.11.0",
		"@typescript-eslint/parser": "^8.11.0",
		"autoprefixer": "^10.4.20",
		"daisyui": "^4.12.13",
		"dprint": "^0.47.5",
		"eslint": "^9.13.0",
		"eslint-plugin-svelte": "^2.46.0",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.47",
		"shx": "^0.3.4",
		"svelte": "^5.1.3",
		"svelte-check": "^4.0.5",
		"tailwindcss": "^3.4.14",
		"tslib": "^2.8.0",
		"typescript": "^5.6.3",
		"vite": "^5.4.10"
	},
	"type": "module",
	"dependencies": {
		"@tauri-apps/api": "^2.0.3",
		"@tauri-apps/plugin-fs": "^2.0.1",
		"blockies": "^0.0.2",
		"d3": "^7.9.0",
		"jdenticon": "^3.3.0",
		"theme-change": "^2.5.0",
		"uuid": "^11.0.0",
		"wanakana": "^5.3.1"
	}
}
